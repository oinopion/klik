<h2>Show Counter</h2>

<%= @counter.name %>
<%= @counter.value %>

<%= form_for @conn, counter_increment_path(@conn, :create, @counter), [as: :increment], fn _ -> %>
  <div class="form-group">
    <%= submit "+1", class: "btn btn-primary" %>
  </div>
<% end %>

<span><%= link "Edit", to: counter_path(@conn, :edit, @counter) %></span>
<span><%= link "Back", to: counter_path(@conn, :index) %></span>
